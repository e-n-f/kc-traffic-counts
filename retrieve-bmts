#!/usr/bin/perl

mkdir "bmts";
system "curl -o bmts/index.html http://www.bmtsonline.com/node/15";

open(IN, "bmts/index.html");
while (<IN>) {
	if (/"(\/files\/bmts[^"]*\/)([^\/"]*pdf)/) {
		print "$1 $2\n";

		system "curl -o 'bmts/$2' 'http://bmtsonline.com$1$2'";
	}

	if (/"(\/sites\/default\/files\/Traffic%20Counts\/)([^\/"]*pdf)/) {
		print "$1 $2\n";

		system "curl -o 'bmts/$2' 'http://bmtsonline.com$1$2'";
	}
}
