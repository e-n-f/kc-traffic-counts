#!/usr/bin/perl

open(IN, "portland-intersections");
while (<IN>) {
	chomp;
	($name, $lat, $lon) = split(/,/);
	$where{$name} = "$lat,$lon";
}
close(IN);

while (<>) {
	chomp;
	@orig = split(/,/);

	$name = $orig[1];
	$name =~ tr/a-z/A-Z/;
	@names = split(/ *\/ */, $name);

	for ($i = 0; $i < $#names; $i++) {
		$code = "$names[$i] at $names[$i + 1]";

		print "$code $where{$code}\n";
	}
}
