	0.260945, 0.247836, 0.221123, 0.200743,
);

@drive_scale = (
	0.113852, 0.099033, 0.084650, 0.076914,
	0.074666, 0.068524, 0.062422, 0.054958,
	0.058308, 0.051675, 0.043694, 0.038450,
